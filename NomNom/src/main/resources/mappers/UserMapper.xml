<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.nomnom.model.dao.UserDao">
	<!-- 회원가입 -->
	<insert id="insertUser" parameterType="User">
		INSERT INTO user
		<trim prefix="(" suffix=")" suffixOverrides=",">
			user_id,
			user_email,
			user_pw,
			user_birthday,
			<if test="userGender != null">user_gender,</if>
			<if test="userHeight != null">user_height,</if>
			<if test="userWeight != null">user_weight,</if>
		</trim>
		VALUES
		<trim prefix="(" suffix=")" suffixOverrides=",">
			#{userId},
			#{userEmail},
			#{userPw},
			#{userBirthday},
			<if test="userGender != null">#{userGender},</if>
			<if test="userHeight != null">#{userHeight},</if>
			<if test="userWeight != null">#{userWeight},</if>
		</trim>
	</insert>

	<!-- 마이페이지 조회 -->
	<select id="getUserByEmail" parameterType="string"
		resultType="User">
		SELECT * FROM user WHERE user_email = #{email}
	</select>

	<!-- 회원정보 수정 -->
	<update id="updateUser" parameterType="User">
		UPDATE user
		SET
		user_pw =
		#{userPw},
		user_birthday = #{userBirthday},
		user_gender = #{userGender},
		user_height = #{userHeight},
		user_weight = #{userWeight}
		WHERE user_no =
		#{userNo}
	</update>

	<!-- 회원탈퇴 -->
	<delete id="deleteUser" parameterType="User">
		DELETE FROM user WHERE
		user_no = #{userNo}
	</delete>

	<!-- 유저-알러지 관계 등록 -->
	<insert id="insertUserAllergy">
		INSERT INTO user_allergy (user_no, allergy_no)
		VALUES
		(#{userNo}, #{allergyNo})
	</insert>

	<!-- 유저-알러지 전체 삭제 -->
	<delete id="deleteUserAllergies" parameterType="int">
		DELETE FROM
		user_allergy WHERE user_no = #{userNo}
	</delete>

	<!-- 알러지 이름으로 ID 조회 -->
	<select id="getAllergyIdByName" parameterType="string"
		resultType="int">
		SELECT allergy_no FROM allergy WHERE name =
		#{allergy}
	</select>

</mapper>